<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LibrarianBookFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:backgroundTint="@color/pas_cream"
        android:elevation="20dp"
        android:background="@drawable/round_bottom"
        android:id="@+id/fraglibbook_titletxt"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:gravity="center"
        android:fontFamily="@font/poppinsbold"
        android:textSize="25sp"
        android:text="Quản lý sách "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TableLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:gravity="center">
    <LinearLayout
        android:backgroundTint="@color/pas_blue"
        android:elevation="20dp"
        android:padding="10dp"
        android:background="@drawable/round_btn"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/fraglibbook_layoutbookoffline"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/libbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/linottebold"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="Sách"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
                <LinearLayout
                    android:backgroundTint="@color/pas_orange"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/fraglibbook_layoutbookstatistic"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/libbooksta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/linottebold"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:text="Thống kê sách"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>

            <TableRow android:gravity="center">
                <LinearLayout
                    android:clickable="true"
                    android:backgroundTint="@color/pas_pink"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/fraglibbook_layoutbookborrow"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/libbookborrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/linottebold"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:text="Sách mượn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:backgroundTint="@color/pas_green"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/fraglibbook_layoutbookoverdue"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/libbookoverdue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/linottebold"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:text="Sách quá hạn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </TableRow>

            <TableRow android:gravity="center">
                <LinearLayout
                    android:backgroundTint="@color/pas_yellow"
                    android:elevation="20dp"
                    android:padding="10dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/fraglibbook_layoutbookauth"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/libbookauth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:fontFamily="@font/linottebold"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:text="Xác nhận sách"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>