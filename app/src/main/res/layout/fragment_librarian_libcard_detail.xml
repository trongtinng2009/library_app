<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg6"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LibrarianLibcardDetailFragment">
    <LinearLayout
        android:id="@+id/fraglibcarddel_topbar"
        android:backgroundTint="@color/pas_cream"
        android:background="@drawable/round_bottom"
        android:gravity="center"
        android:weightSum="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/fraglibcarddel_backbtn"
            android:background="@color/transparent"
            android:src="@drawable/arrow_back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25sp"
            android:text="Chi tiết thẻ"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fraglibcarddel_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="10"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/fraglibcarddel_name"
                android:textColor="@color/white"
                android:backgroundTint="@color/medium_blue"
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/poppinsbold"
                android:text="Sera Seraphine"
                android:background="@drawable/round_bottombar"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <LinearLayout
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fraglibcarddel_infobtn"
                    android:background="@color/pas_redbrown"
                    android:text="Thông tin"
                    android:fontFamily="@font/linottebold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fraglibcarddel_bookborrow"
                    android:background="@color/pas_cream"
                    android:text="Sách đã mượn"
                    android:fontFamily="@font/linottebold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fraglibcarddel_bookdue"
                    android:background="@color/pas_cream"
                    android:text="Sách quá hạn"
                    android:fontFamily="@font/linottebold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <FrameLayout
                    android:background="@color/white"
                    android:paddingBottom="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:padding="10dp"
                        android:visibility="gone"
                        android:id="@+id/fraglibcarddel_rcvbookborrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/fraglibcarddel_cardinfo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:background="@color/white"
                android:padding="10dp"
                android:fontFamily="@font/linottebold"
                android:textSize="23sp"
                android:text="Informations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Card id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_id"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="LIBCARD1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Họ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_firstname"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="Sera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Tên"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_lastname"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="Seraphine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Địa chỉ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_address"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="Los Angeles, California, Hoa Kỳ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Ngày sinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_dob"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="18/10/2000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Xác nhận vào"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_adddate"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="20/09/2023"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/med_grey"
                    android:textSize="21sp"
                    android:fontFamily="@font/linottebold"
                    android:text="Số điện thoại"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fraglibcarddel_phone"
                    android:textSize="20sp"
                    android:fontFamily="@font/linotteregular"
                    android:text="+44-823-1133"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/med_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            </LinearLayout>
                </FrameLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fraglibcarddel_cardimg"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/medium_blue"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/seraavt2"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>