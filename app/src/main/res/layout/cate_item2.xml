<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="180dp">
    <LinearLayout
        android:id="@+id/cate_item2_layout"
        android:background="@color/pas_cream"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cate_item2_img"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/mangabook"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/cate_item2_txt"
            android:layout_margin="10dp"
            android:fontFamily="@font/linottebold"
            android:textSize="18sp"
            android:text="MANGA BOOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>