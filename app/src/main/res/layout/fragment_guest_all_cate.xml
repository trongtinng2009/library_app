<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestAllCateFragment">

    <ImageButton
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        android:background="@color/transparent"
        android:id="@+id/fragguestallcate_backbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow_back"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/fraglibconcard_title"
        app:layout_constraintTop_toTopOf="@id/fragguestallcate_backbtn"
        app:layout_constraintLeft_toRightOf="@id/fragguestallcate_backbtn"
        app:layout_constraintBottom_toBottomOf="@id/fragguestallcate_backbtn"
        android:fontFamily="@font/poppinsbold"
        android:textSize="25sp"
        android:text="THỂ LOẠI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fraglibconcard_title"
        android:id="@+id/fragguestallcate_rcvcate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>