<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg6"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.LibrarianViewCardFragment">

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                android:background="@color/transparent"
                android:id="@+id/fraglibviewcard_backbtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/arrow_back"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fraglibconcard_title"
                app:layout_constraintLeft_toRightOf="@id/fraglibviewcard_backbtn"
                app:layout_constraintTop_toTopOf="@id/fraglibviewcard_backbtn"
                app:layout_constraintBottom_toBottomOf="@id/fraglibviewcard_backbtn"
                android:fontFamily="@font/poppinsbold"
                android:textSize="25sp"
                android:text="Xem thẻ thư viện"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/fraglibconcard_searchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/edittext_round"
                android:elevation="5dp"
                android:padding="5dp"
                app:iconifiedByDefault="false"
                app:layout_constraintTop_toBottomOf="@id/fraglibconcard_title"
                app:queryBackground="@color/transparent"
                app:queryHint="Tìm kiếm" />
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fraglibconcard_searchview"
                android:id="@+id/fraglibviewcard_totalbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="rfdsf"
                android:textSize="16sp"
                />
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/fraglibviewcard_totalbtn"
                android:id="@+id/fraglibconcard_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/fraglibconcard_sortbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/arrow_down"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Sort by date"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:paddingBottom="230dp"
                app:layout_constraintTop_toBottomOf="@id/fraglibconcard_sort"
                android:id="@+id/fraglibviewcard_rcvcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>