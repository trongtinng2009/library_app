<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/stroke_item"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_item_img"
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:src="@drawable/seraavt2"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/comment_item_user"
            android:textSize="16sp"
            android:fontFamily="@font/linottebold"
            android:text="fdssdfdsfsdfdsfdsfdsfssdfsdfsdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/comment_item_content"
        android:textSize="16sp"
        android:fontFamily="@font/linotteregular"
        android:text="fdssdfdsfsdfdsfdsfdsfssdfsdfsdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comment_item_adddate"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/linotteregular"
            android:text="Đăng vào:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>