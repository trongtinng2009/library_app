<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestBookBorrowingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fragguestbookborrowing_title"
            android:layout_marginTop="17dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/fragguestbookborrowing_backbtn"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:src="@drawable/arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_weight="8"
            android:id="@+id/fragguestbookborrowing_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25sp"
            android:text="SÁCH ĐANG MƯỢN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
            </LinearLayout>
        <androidx.appcompat.widget.SearchView
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:iconifiedByDefault="true"
            app:layout_constraintLeft_toRightOf="@id/fragguestbookborrowing_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestbookborrowing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:backgroundTint="@color/pas_cream"
            android:background="@drawable/round_topleftbotleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/fragguestbookborrowing_havebook"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/fragguestbookborrowing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/fragadminmngacc_sortbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/arrow_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Sort by date"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@id/fragadminmngacc_sortbtn"
                    app:layout_constraintTop_toBottomOf="@id/fragadminmngacc_searchoptions" />
            </LinearLayout>
            <View
                app:layout_constraintLeft_toLeftOf="@id/fragguestbookborrowing_title"
                app:layout_constraintTop_toBottomOf="@id/fragguestbookborrowing_title"
                android:background="@color/med_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingBottom="220dp"
                    android:id="@+id/fragguestbookborrowing_rcv"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/fragguestbookborrowing_nothavebook"
                android:layout_marginBottom="90dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="600dp">
                <ImageView
                    android:src="@drawable/kitty2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="20dp"
                    android:fontFamily="@font/linottebold"
                    android:gravity="center"
                    android:textSize="23sp"
                    android:text="HIỆN BẠN CHƯA MƯỢN QUYỂN SÁCH NÀO !"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Hãy gửi yêu cầu mượn sách ngay nhé."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>