<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/profilebg"
    android:layout_height="match_parent"
    tools:context=".Activity.SignupActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:backgroundTint="@color/pas_redbrown"
            android:padding="10dp"
            android:background="@drawable/round_bottom"

            android:gravity="center"
            android:weightSum="10"
            android:id="@+id/signupact_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/signupact_backbtn"
                android:background="@color/transparent"
                android:src="@drawable/arrow_back"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/poppinsbold"
                android:textSize="30sp"
                android:text="Đăng ký"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="1dp"
            android:id="@+id/signupact_img"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signupact_title"
            android:src="@drawable/avt"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/signupact_img"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
            android:padding="30dp"
            android:orientation="vertical"
            android:backgroundTint="@color/pas_redbrown"
            android:background="@drawable/round_topleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/linottebold"
                    android:textSize="20sp"
                    android:text="Tên đăng nhập"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/signupact_loginname"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/supervisor_account"
                    android:hint="Login name"
                    android:background="@drawable/edittext_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/linottebold"
                    android:textSize="20sp"
                    android:text="Tên người dùng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/signupact_username"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/person"
                    android:hint="Type your name"
                    android:background="@drawable/edittext_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/linottebold"
                    android:textSize="20sp"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/signupact_email"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/mail"
                    android:hint="Type your email"
                    android:background="@drawable/edittext_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/linottebold"
                    android:textSize="20sp"
                    android:text="Mật khẩu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/signupact_password"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/lock"
                    android:hint="Password"
                    android:background="@drawable/edittext_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/linottebold"
                    android:textSize="20sp"
                    android:text="Nhập lại mật khẩu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/signupact_repassword"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/lock"
                    android:hint="Reconfirm password"
                    android:background="@drawable/edittext_round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/signupact_radiogrp"
                android:layout_marginTop="15dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/signupact_male"
                    android:layout_weight="2"
                    android:checked="true"
                    android:text="Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/signupact_female"
                    android:layout_weight="2"
                    android:text="Nữ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupact_signupbtn"
                android:elevation="10dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:text="Đăng ký"
                android:backgroundTint="@color/pas_lowcream"
                android:background="@drawable/round_btn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>