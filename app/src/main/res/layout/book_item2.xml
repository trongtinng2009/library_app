<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_margin="10dp"
    android:elevation="20dp"
    android:id="@+id/book_item2_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/book_item2_img"
           app:riv_corner_radius="10dp"
           android:padding="10dp"
           android:scaleType="centerCrop"
           android:src="@drawable/seraavt2"
           android:layout_width="match_parent"
           android:layout_height="180dp"/>
        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/book_item2_name"
        android:gravity="center"
        android:fontFamily="@font/linottebold"
        android:textSize="20sp"
        android:text="Seraphine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/book_item2_name"
        android:id="@+id/book_item2_author"
        android:textColor="@color/med_grey"
        android:gravity="center"
        android:fontFamily="@font/linotteregular"
        android:textSize="17sp"
        android:text="Tác giả: Đang cập nhật"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/book_item2_isavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_item2_author"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_profile"
                android:fontFamily="@font/linottebold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Còn sách"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>