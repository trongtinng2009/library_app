<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/borrowingbooklib_img"
            android:scaleType="centerCrop"
            android:src="@drawable/neekoavt"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="20dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/borrowingbooklib_bookname"
                        android:fontFamily="@font/linottebold"
                        android:textSize="18sp"
                        android:text="THÁM TỬ CONAN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/borrowingbooklib_idbook"
                        android:fontFamily="@font/linotteregular"
                        android:textSize="15sp"
                        android:text="Id book : manga1122"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/borrowingbooklib_idcard"
                        android:fontFamily="@font/linotteregular"
                        android:textSize="15sp"
                        android:text="Id card : LIB35665"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/borrowingbooklib_rqdate"
                        android:fontFamily="@font/linotteregular"
                        android:textSize="15sp"
                        android:text="Request date : 28/10/2023"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/borrowingbooklib_libimg"
                    android:src="@drawable/neekoavt"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/borrowingbooklib_verifybtn"
                    android:layout_weight="3"
                    android:fontFamily="@font/linottebold"
                    android:backgroundTint="@color/pas_red"
                    android:background="@drawable/round_topleft"
                    android:text="VERIFY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>